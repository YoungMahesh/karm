generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  userId         String          @unique
  timers        Timer[]
  timerSessions2 TimerSessions[]
}

model Timer {
  id            String          @id @default(cuid())
  title         String
  description   String?
  totalTime     Int
  updatedAt     Int
  isRunning     Boolean
  userId        String
  user          User            @relation(fields: [userId], references: [userId], onDelete: Cascade)
  TimerSessions TimerSessions[]

  @@unique([userId, title])
}

model TimerSessions {
  id         String @id @default(cuid())
  timerId    String
  startTime  Int
  endTime    Int
  timePassed Int
  userId     String
  timer     Timer  @relation(fields: [timerId], references: [id])
  user       User   @relation(fields: [userId], references: [userId], onDelete: Cascade)
}
